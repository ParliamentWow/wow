{
  "name": "remix-workers-app",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist && rm -rf public/dist",
    "deploy": "pnpm dotenv -- npm run clean && remix build && wrangler deploy",
    "dev": "remix dev --manual -c \"wrangler dev --x-dev-env=false\"",
    "drizzle:generate": "pnpm dotenv -- drizzle-kit  generate",
    "drizzle:migrate": "pnpm dotenv -- drizzle-kit  migrate",
    "drizzle:studio": "pnpm dotenv -- drizzle-kit  studio",
    "typecheck": "tsc",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check --apply ."
  },
  "dependencies": {
    "@remix-run/cloudflare": "^2.12.1",
    "@remix-run/react": "^2.12.1",
    "dotenv-cli": "^7.4.2",
    "drizzle-orm": "^0.33.0",
    "hono": "^4.6.3",
    "isbot": "^5.1.17",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.3",
    "@cloudflare/workers-types": "^4.20241004.0",
    "@remix-run/dev": "^2.12.1",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.24.2",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.2",
    "wrangler": "^3.80.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
