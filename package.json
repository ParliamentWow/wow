{
  "name": "remix-workers-app",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist && rm -rf public/dist",
    "deploy": "npm run clean && remix build && wrangler deploy",
    "dev": "remix dev --manual -c \"wrangler dev --x-dev-env=false\"",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "drizzle:generate": "pnpm dotenv -- drizzle-kit  generate",
    "drizzle:migrate": "pnpm dotenv -- drizzle-kit  migrate",
    "drizzle:studio": "pnpm dotenv -- drizzle-kit  studio",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.3.0",
    "@remix-run/cloudflare": "^2.12.1",
    "@remix-run/react": "^2.12.1",
    "dotenv-cli": "^7.4.2",
    "drizzle-orm": "^0.33.0",
    "drizzle-zod": "^0.5.1",
    "hono": "^4.6.3",
    "isbot": "^5.1.17",
    "p-retry": "^6.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241004.0",
    "@remix-run/dev": "^2.12.1",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.24.2",
    "eslint": "^8.38.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.2",
    "wrangler": "^3.80.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
